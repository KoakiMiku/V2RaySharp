<Window x:Name="window" x:Class="V2RaySharp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="V2RaySharp" Height="425" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" KeyDown="Window_KeyDown" Icon="/V2RaySharp;component/Resources/V2Ray.ico">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBoxNode" Margin="10,10,5,5" Grid.RowSpan="4" Background="{x:Null}" BorderBrush="#FFAAAAAA" TabIndex="0"/>
        <Label x:Name="labelUpgrade" Margin="10,5,5,10" Grid.Row="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}"/>
        <Button x:Name="buttonSwitch" Content="Switch" Grid.Column="1" Margin="5,10,10,5" Background="{x:Null}" BorderBrush="#FFAAAAAA" Click="ButtonSwitch_Click" TabIndex="1"/>
        <Button x:Name="buttonNode" Content="Change Node" Grid.Column="1" Margin="5,5,10,5" Grid.Row="1" Background="{x:Null}" BorderBrush="#FFAAAAAA" Click="ButtonNode_Click" TabIndex="2"/>
        <Button x:Name="buttonRoute" Content="Change Route" Grid.Column="1" Margin="5,5,10,5" Grid.Row="2" Background="{x:Null}" BorderBrush="#FFAAAAAA" Click="ButtonRoute_Click" TabIndex="3"/>
        <Button x:Name="buttonEdit" Content="Edit Config" Grid.Column="1" Margin="5,5,10,5" Grid.Row="3" Background="{x:Null}" BorderBrush="#FFAAAAAA" Click="ButtonEdit_Click" TabIndex="4"/>
        <Label x:Name="labelStatus" Grid.Column="1" Margin="5,5,10,10" Grid.Row="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}"/>

    </Grid>
</Window>
